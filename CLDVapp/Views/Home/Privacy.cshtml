@{
    ViewData["Title"] = "View Claims";
}
<h1>@ViewData["Title"]
</h1>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claims List - Contract Monthly Claim System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            color: #4CAF50;
            margin-top: 20px;
        }

        table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            table th, table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table th {
                background-color: #4CAF50;
                color: white;
            }

            table tr:hover {
                background-color: #f1f1f1;
            }

        a {
            color: #4CAF50;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
        /* Status Column Styling */
        .status-accepted {
            color: #4CAF50;
            font-weight: bold;
        }

        .status-rejected {
            color: #f44336;
            font-weight: bold;
        }

        .status-pending {
            color: #ff9800;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h2>Claims List</h2>

    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hours Worked</th>
                <th>Document</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>John</td>
                <td>Doe</td>
                <td>40</td>
                <td><a href="documents/john_doe_claim.pdf" target="_blank">View Document</a></td>
                <td class="status-accepted">Accepted</td>
            </tr>
            <tr>
                <td>Jane</td>
                <td>Smith</td>
                <td>35</td>
                <td><a href="documents/jane_smith_claim.pdf" target="_blank">View Document</a></td>
                <td class="status-rejected">Rejected</td>
            </tr>
            <tr>
                <td>Michael</td>
                <td>Johnson</td>
                <td>45</td>
                <td><a href="documents/michael_johnson_claim.pdf" target="_blank">View Document</a></td>
                <td class="status-pending">Pending</td>
            </tr>
            <!-- Add more claims as needed -->
        </tbody>
    </table>

</body>
</html>

